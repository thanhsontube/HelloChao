<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="son.nt.hellochao.fragment.PlayingMidFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/layer_image"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_down_white"
        android:layout_margin="16dp"
        android:layout_gravity="left"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_list_white"
        android:layout_margin="16dp"
        android:layout_gravity="right"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_control_volume"
        android:layout_margin="16dp"
        android:layout_gravity="right|bottom"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_scrip"
        android:layout_margin="16dp"
        android:layout_gravity="left|bottom"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        android:orientation="vertical">
        
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/md_white_1000"/>
        
        <ImageView
            android:id="@+id/mid_image"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/temp_1"/>
        <son.nt.hellochao.widget.ScrollingTextView
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:id="@+id/taxi_type_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:text="@string/large_text" />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Medium"
            android:textColor="@color/md_white_1000"/>


    </LinearLayout>


</FrameLayout>
